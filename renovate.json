{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":automergeLinters", "group:nodeJs", "customManagers:biomeVersions"],
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    },
    {
      "groupName": "esbuild",
      "matchPackageNames": ["/esbuild/"]
    },
    {
      "groupName": "biome",
      "matchPackageNames": ["/biome/"],
      "schedule": ["* * 15 * *"]
    }
  ]
}
