{
  "name": "saxi",
  "version": "0.15.0",
  "description": "Drive the AxiDraw pen plotter",
  "homepage": "https://github.com/nornagon/saxi",
  "repository": "github:nornagon/saxi",
  "bugs": "https://github.com/nornagon/saxi/issues",
  "keywords": [
    "axidraw",
    "plotter",
    "pen plotter",
    "eggbot",
    "serial",
    "hardware",
    "robot"
  ],
  "main": "index.js",
  "bin": {
    "saxi": "cli.js"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "lint": "ts-standard",
    "install:githooks": "git config --local core.hooksPath ./githooks",
    "format": "ts-standard --fix",
    "build": "npm run build:server && npm run build:ui",
    "build:server": "tsc",
    "build:ui": "node --experimental-modules build.mjs",
    "prepare": "rimraf dist && npm run build",
    "prestart": "npm run build",
    "start": "node cli.js",
    "serve": "npm run build:server && npm start",
    "dev": "npm run serve & BUILD_MODE=development npm run build:ui",
    "deploy": "rimraf dist/ui && IS_WEB=1 npm run build:ui && gh-pages --dist dist/ui",
    "test": "jest"
  },
  "author": "Jeremy Rose <nornagon@nornagon.net>",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.6.1",
    "@rehooks/component-size": "^1.0.2",
    "@serialport/bindings-cpp": "^12.0.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.17.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^16.0.0 || ^18.0.0 || ^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/w3c-web-serial": "^1.0.2",
    "@types/ws": "8.0.0 - 8.5",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.6.0",
    "color-interpolate": "^1.0.5",
    "colormap": "^2.3.2",
    "esbuild": "^0.19.2",
    "esbuild-plugin-inline-worker": "^0.1.1",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.12.4",
    "gh-pages": "^5.0.0 || ^6.0.0",
    "jest": "^29.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^5.0.0",
    "semver": "^7.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "~5.0 || ~5.2.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "flatten-svg": "^0.3.0",
    "optimize-paths": "^1.2.2",
    "serialport": "^12.0.0",
    "svgdom": "0.1.16",
    "wake-lock": "^0.2.0",
    "web-streams-polyfill": "^3.0.3",
    "ws": "^8.0.0",
    "yargs": "^17.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "files": [
    "/dist",
    "cli.js"
  ],
  "optionalDependencies": {
    "@esbuild/linux-arm": "^0.19.2"
  }
}
